<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="460.0" style="-fx-background-color: #BFDCFE;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Text fx:id="fileName" strokeType="OUTSIDE" strokeWidth="0.0" text="File Name" StackPane.alignment="CENTER_LEFT">
         <font>
            <Font name="Ekkamai New Bold" size="22.0" />
         </font>
      </Text>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" StackPane.alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#handleOpenFile" style="-fx-background-color: lightblue;" text="Open">
               <font>
                  <Font name="Ekkamai New Bold" size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" style="-fx-background-color: lightblue;" text="Export">
               <font>
                  <Font name="Ekkamai New Bold" size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleDeleteFile" style="-fx-background-color: lightblue;" text="X">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</StackPane>
