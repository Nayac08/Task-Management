<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox prefHeight="45.0" prefWidth="765.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="276.0">
         <children>
            <Text fx:id="memberName" strokeType="OUTSIDE" strokeWidth="0.0" text="Narumedsr Pitayachamrat">
               <font>
                  <Font name="Ekkamai New Bold" size="18.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </StackPane>
      <StackPane alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="235.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Role">
               <font>
                  <Font name="Ekkamai New Bold" size="18.0" />
               </font>
            </Text>
            <Text fx:id="memberRole" strokeType="OUTSIDE" strokeWidth="0.0" text="Role Admin">
               <font>
                  <Font name="Ekkamai New Bold" size="18.0" />
               </font>
            </Text>
         </children>
      </StackPane>
      <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="221.0" spacing="5.0">
         <children>
            <Button fx:id="selectButton" mnemonicParsing="false" onAction="#handleSelectMember" prefHeight="26.0" prefWidth="66.0" style="-fx-background-color: lightblue;" text="Select">
               <font>
                  <Font name="Ekkamai New Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="deselectedButton" mnemonicParsing="false" onAction="#handleDeselectMember" prefHeight="27.0" prefWidth="73.0" style="-fx-background-color: lightblue;" text="Deselect">
               <font>
                  <Font name="Ekkamai New Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteMember" style="-fx-background-color: none;" text="X">
               <font>
                  <Font name="Ekkamai New Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
