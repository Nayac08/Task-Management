<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox prefHeight="32.0" prefWidth="650.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="248.0">
         <children>
            <Text fx:id="labelName" strokeType="OUTSIDE" strokeWidth="0.0" text="Narumedsr Pitayachamrat">
               <font>
                  <Font name="Ekkamai New Bold" size="14.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </StackPane>
      <StackPane alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="176.0">
         <children>
            <Rectangle fx:id="labelColor" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="20.0" stroke="#aba7a7" strokeType="INSIDE" width="200.0" />
         </children>
      </StackPane>
      <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="221.0" spacing="5.0">
         <children>
            <Button fx:id="selectButton" mnemonicParsing="false" onAction="#handleSelectLabel" prefHeight="19.0" prefWidth="66.0" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 3; -fx-background-radius: 3; -fx-cursor: hand;" text="Select">
               <font>
                  <Font name="Ekkamai New Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="deselectedButton" mnemonicParsing="false" onAction="#handleDeselectLabel" prefHeight="17.0" prefWidth="73.0" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-background-radius: 3; -fx-border-radius: 3; -fx-cursor: hand;" text="Deselect">
               <font>
                  <Font name="Ekkamai New Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteLabel" style="-fx-background-color: white; -fx-border-radius: 3; -fx-background-radius: 3; -fx-border-color: lightgray; -fx-cursor: hand;" text="X">
               <font>
                  <Font name="Ekkamai New Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
