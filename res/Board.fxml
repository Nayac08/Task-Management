<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="1080.0" prefWidth="1420.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<children>
      <StackPane prefHeight="100.0" prefWidth="1420.0" style="-fx-background-color: #60D383;">
         <children>
            <Text fx:id="displayName" strokeType="OUTSIDE" strokeWidth="0.0" text="Display Name" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font name="Ekkamai New Bold" size="40.0" />
               </font>
            </Text>
            <Button mnemonicParsing="false" onAction="#handleClearDisplay" style="-fx-background-color: none;" text="X" StackPane.alignment="CENTER_RIGHT">
               <font>
                  <Font name="Ekkamai New Bold" size="30.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </StackPane>
      <ScrollPane hbarPolicy="ALWAYS" maxWidth="1420.0" pannable="true" prefHeight="980.0" prefWidth="1420.0" vbarPolicy="NEVER">
         <content>
      		<HBox fx:id="displayZone" minHeight="-Infinity" minWidth="-Infinity" prefHeight="965.0">
         <children>
            <VBox prefHeight="450.0" prefWidth="300.0">
               <children>
                  <VBox fx:id="addListNodeDetail" prefHeight="150.0" prefWidth="180.0" spacing="5.0" style="-fx-background-color: #ECEFF0;">
                     <children>
                        <TextArea fx:id="titleArea" prefHeight="66.0" prefWidth="180.0" promptText="Enter List name" VBox.vgrow="ALWAYS">
                           <font>
                              <Font name="Ekkamai New Bold" size="18.0" />
                           </font>
                        </TextArea>
                        <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="180.0" VBox.vgrow="NEVER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleAddNodeListToBoard" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: lightblue;" text="Add list">
                                 <font>
                                    <Font name="Ekkamai New Bold" size="18.0" />
                                 </font>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#handleHideAddListDetailButton" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: none;" text="X">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <Button fx:id="addListNodeButton" mnemonicParsing="false" onAction="#handleShowAddListDetailButton" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #ECEFF0;" text="+ Add another list">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="Ekkamai New Bold" size="22.0" />
                     </font>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
      	</children>
      </HBox>
         </content>
      </ScrollPane>
	</children>
</VBox>
