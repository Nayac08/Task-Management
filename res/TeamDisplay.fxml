<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="720.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<StackPane prefHeight="65.0" prefWidth="960.0" style="-fx-background-color: #60D383;">
			<children>
            <Label fx:id="displayName" prefHeight="32.0" prefWidth="874.0" text="Team Display Name" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font name="Ekkamai New Bold" size="28.0" />
               </font>
            </Label>
				<Button mnemonicParsing="false" onAction="#handleClearDisplay" style="-fx-background-color: none;" text="X" StackPane.alignment="CENTER_RIGHT">
					<font>
						<Font name="Ekkamai New Bold" size="24.0" />
					</font>
				</Button>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</StackPane>
		<ScrollPane hbarPolicy="ALWAYS" maxWidth="1420.0" pannable="true" prefHeight="655.0" prefWidth="960.0" vbarPolicy="NEVER">
			<content>
				<HBox fx:id="displayZone" minHeight="-Infinity" minWidth="-Infinity" prefHeight="635.0">
					<children>
						<VBox prefHeight="450.0" prefWidth="192.0">
							<children>
								<VBox fx:id="addListNodeDetail" prefHeight="120.0" prefWidth="192.0" spacing="5.0" style="-fx-background-color: #ECEFF0;">
									<children>
                              <TextField fx:id="titleArea" prefHeight="32.0" prefWidth="172.0" promptText="Enter List name">
                                 <font>
                                    <Font name="Ekkamai New Bold" size="14.0" />
                                 </font>
                              </TextField>
										<HBox alignment="CENTER_LEFT" prefHeight="23.0" prefWidth="172.0" VBox.vgrow="NEVER">
											<children>
												<Button mnemonicParsing="false" onAction="#handleAddNodeListToBoard" prefHeight="27.0" prefWidth="67.0" style="-fx-background-color: lightblue;" text="Add list">
													<font>
														<Font name="Ekkamai New Bold" size="14.0" />
													</font>
												</Button>
												<Button mnemonicParsing="false" onAction="#handleHideAddListDetailButton" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: none;" text="X">
													<font>
														<Font name="Ekkamai New Bold" size="14.0" />
													</font>
												</Button>
											</children>
										</HBox>
									</children>
									<padding>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</padding>
								</VBox>
								<Button fx:id="addListNodeButton" mnemonicParsing="false" onAction="#handleShowAddListDetailButton" prefHeight="32.0" prefWidth="192.0" style="-fx-background-color: #ECEFF0;" text="+ Add another list">
									<padding>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</padding>
									<font>
										<Font name="Ekkamai New Bold" size="16.0" />
									</font>
								</Button>
							</children>
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</VBox>
					</children>
				</HBox>
			</content>
		</ScrollPane>
	</children>
</VBox>
